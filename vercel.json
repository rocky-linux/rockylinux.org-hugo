{
  "public": true,
  "build": {
    "env": {
      "HUGO_VERSION": "0.79.0",
      "NODE_ENV": "production"
    }
  },
  "routes": [
    { "handle": "filesystem" },
    { "src": "/de/(.*)", "status": 404, "dest": "/de/404.html" },
    { "src": "/es/(.*)", "status": 404, "dest": "/es/404.html" },
    { "src": "/it/(.*)", "status": 404, "dest": "/it/404.html" },
    { "src": "/tr/(.*)", "status": 404, "dest": "/tr/404.html" },
    { "src": "/ru/(.*)", "status": 404, "dest": "/ru/404.html" },
    { "src": "/lv/(.*)", "status": 404, "dest": "/lv/404.html" },
    { "src": "/fa/(.*)", "status": 404, "dest": "/fa/404.html" },
    { "src": "/(.*)",    "status": 404, "dest": "/404.html" }
  ]
}
